<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/broadcastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:text="Send Broadcast" />

    <TextView
        android:id="@+id/broadcastReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/broadcastButton"
        android:layout_below="@+id/broadcastButton"
        android:layout_marginTop="17dp"
        android:text="received broadcast"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/broadcastReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/broadcastReceived"
        android:layout_below="@+id/broadcastReceived"
        android:layout_marginTop="39dp"
        android:text="Button" />

    <TextView
        android:id="@+id/replyReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/broadcastReply"
        android:layout_below="@+id/broadcastReply"
        android:layout_marginTop="30dp"
        android:text="received reply"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
